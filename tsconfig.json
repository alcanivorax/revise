{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,

    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"]
  },
  "include": ["src", "index.ts"],
  "exclude": [
    "**/__tests__/**",
    "**/__test__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
